{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Course Architecture Schema v0.6",
    "description": "Top-level container for a course content graph (Pass 1 Artifact).",
    "type": "object",
    "required": [
        "course_id",
        "version",
        "generated_at_utc",
        "scenario_anchors",
        "learning_objects"
    ],
    "additionalProperties": false,
    "properties": {
        "course_id": {
            "type": "string",
            "description": "Unique identifier for the course."
        },
        "version": {
            "type": "string",
            "pattern": "^\\d+\\.\\d+\\.\\d+$",
            "description": "Semantic version of this architecture file."
        },
        "generated_at_utc": {
            "type": "string",
            "format": "date-time",
            "description": "ISO 8601 timestamp of generation."
        },
        "scenario_anchors": {
            "type": "array",
            "description": "List of real-world scenarios anchored from input materials.",
            "minItems": 2,
            "items": {
                "type": "object",
                "required": [
                    "id",
                    "title",
                    "description",
                    "source_ref"
                ],
                "additionalProperties": false,
                "properties": {
                    "id": {
                        "type": "string",
                        "description": "Unique identifier for the scenario anchor."
                    },
                    "title": {
                        "type": "string",
                        "description": "Short title of the scenario."
                    },
                    "description": {
                        "type": "string",
                        "description": "Detailed description of the scenario context."
                    },
                    "source_ref": {
                        "type": "string",
                        "description": "Reference to source material (e.g., 'SME Notes Section 2')."
                    }
                }
            }
        },
        "learning_objects": {
            "type": "array",
            "description": "List of all Learning Objects in this course.",
            "items": {
                "$ref": "learning_object.json"
            }
        }
    }
}