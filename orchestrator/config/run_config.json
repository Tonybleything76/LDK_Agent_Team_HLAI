{
    "version": "0.2",
    "mode": "claude_cli",
    "approval": {
        "enabled": true,
        "token": "APPROVE",
        "case_insensitive": true,
        "gate_strategy": "per_phase",
        "phase_gates": [
            2,
            6,
            9
        ]
    },
    "validation": {
        "min_deliverable_chars": 300,
        "placeholder_markers": [
            "[Missing",
            "[Pending",
            "Awaiting",
            "No business brief",
            "TBD",
            "TODO",
            "unpopulated"
        ]
    },
    "agents": [
        {
            "agent_name": "strategy_lead_agent",
            "prompt_relpath": "prompts/strategy_lead/prompt.md",
            "tmp_json_relpath": "outputs/tmp_strategy_lead_agent.json",
            "step_idx": 1,
            "gate": true
        },
        {
            "agent_name": "learner_research_agent",
            "prompt_relpath": "prompts/learner_research/prompt.md",
            "tmp_json_relpath": "outputs/tmp_learner_research_agent.json",
            "step_idx": 2,
            "gate": true
        },
